<% layout ('layout') %>


	<table class="table">
		<% var col = options.length*2 %>
		<th id="title" colspan="<%= col %>"> Plan</th>

		<tr>
			<th class="logocarrier" colspan="2">Carrier</th>
			<% options.forEach(function(o){%>
			<% o.Carriers.forEach(function(c){%>
			<td><img class="logo" src="<%= c.carrier_logo %>"></td>
			<%})%>
			<%})%>

		</tr>

		<tr>
			<th class="planname" colspan="2">Plan Name</th>
			<% var i = 0%>
			<% options.forEach(function (o){%>
			<td ><%=o.plan_name%></td>
			<% }) %>
		</tr>

		<tr>
			<th class="price" colspan="2">Price</th>
			<% var i = 0%>
			<% options.forEach(function (o){%>
			<% i++%>
			<td > <p id="price<%=i%>" class="odometer">0</p></td>
			<% }) %>
		</tr>
		<tr>
			<th class="data" colspan="2">Data</th>
			<% options.forEach(function(o){%>
			<td><%=o.data %> GB</td>
			<%});%>
			
		</tr>
		<tr>
			<th class="talk" colspan="2">Talk</th>
			<% options.forEach(function(o){%>
			<td> <%= o.talk_min%></td>
			<%});%>
			
		</tr>

		<tr>
			<th class="sms" colspan="2">SMS</th>
			<% options.forEach(function(o){%>
			<td> <%= o.sms%></td>
			<%});%>
			
		</tr>
		<tr>
			<th class="sms" colspan="2">Private Network</th>
			<% options.forEach(function(o){%>
			<td> <%= o.private_net_min%></td>
			<%});%>
			
		</tr>
		<tr>
			<th class="devices" colspan="2">Devices</th>
			
			<% options.forEach(function(o){%>
				<td>
				<%o.Devices.forEach(function(d){%>	
					<div class="thumbnail">
				      	<img src="<%=d.device_image%> " alt="...">
				      	<div class="caption">
				      		<p style="font-size: 20px">
				      		<b style="font-size: 25px"><%=d.device_name%></b><br>
				      		<b>Price: </b><%=d.price%><br>
				      		<b>Contract: </b><%=d.contract_type%>
				      		</p>
				      		<p><a href="#" class="btn btn-success" role="button">Buy</a></p>

				      	</div>
				        	
				    </div>
				
				<%})%>
				</td>
			
			<%});%> 






		
		</tr>
	</table>
	<script>
	
	var priceArray = [];

	<% options.forEach(function(o) { %>
		priceArray.push(<%= o.monthly_price %>);
	<% }); %>

	var j = 0;
	priceArray.forEach(function(amount){
		j++;
		var price = "#price" + j;
		setTimeout(function(){
			$(price).html(amount)
		 }, 1500);
	});
	</script>


